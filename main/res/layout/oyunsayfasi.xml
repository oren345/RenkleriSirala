<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TableRow
        android:layout_height="60dp"
        android:id="@+id/tableRow2"
        android:layout_marginTop="102dp"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/ustsira1" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/ustsira2" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/ustsira3" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/ustsira4"
            android:background="@android:drawable/checkbox_off_background" />
    </TableRow>

    <TableRow
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:layout_marginBottom="104dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_above="@+id/tableRow6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="21dp"
            android:id="@+id/altsira1" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/altsira2" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/altsira3" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/altsira4" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/altsira5" />
    </TableRow>

    <Button
        android:layout_width="40dp"
        android:id="@+id/geri"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tableRow6"
        android:background="@drawable/noun_1177981_cc"
        android:layout_height="40dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ileri"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/noun_1177985_cc" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/ileri"
        android:layout_centerHorizontal="true"
        android:id="@+id/döndür"
        android:background="@drawable/noun_587556_cc" />

    <TextView
        android:text="KOLAY 1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
